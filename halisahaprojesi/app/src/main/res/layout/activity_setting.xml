<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <EditText
        android:id="@+id/editTextParola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="parola"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_below="@id/editTextName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gradient_end"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_below="@+id/toolbarSetting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_height="150dp"
        android:id="@+id/setting_image">



    </de.hdodenhof.circleimageview.CircleImageView>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/setting_image"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="Name"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background_button"
    android:layout_below="@id/editTextParola"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:id="@+id/buttonDegistir"
    android:layout_marginTop="20dp"
    android:text="DegiÅŸtir"></Button>
</RelativeLayout>