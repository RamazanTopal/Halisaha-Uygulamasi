<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_tasarim_btn"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#e5e5e5"
        android:minHeight="250dp"
        app:cardCornerRadius="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/HalisahaAdi"
                android:layout_width="395dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="14dp"
                android:width="600dp"
                android:text="Selçuklu Halı Saha"
                android:textAlignment="center"
                android:textColor="#7f0000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/HalisahaAdresi"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:layout_below="@+id/HalisahaAdi"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:width="350dp"
                android:height="100dp"
                android:text="Mekke caddesi.Çağlayan sokak.15/1"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/HalisahaUcreti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HalisahaAdresi"

                android:layout_marginStart="67dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="18dp"
                android:text="250TL"
                android:textColor="#7f0000"
                android:textSize="24dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/HalisahaAdi"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/konum" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>