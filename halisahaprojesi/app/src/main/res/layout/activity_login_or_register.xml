<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".LoginOrRegister">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/halisaha">
    </RelativeLayout>

    <Button
        android:id="@+id/KullaniciyaGit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="340dp"
        android:layout_marginRight="15dp"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_button"
        android:text="Kullanıcı Girişi"
        android:textColor="#FFFFFF"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/AdmineGit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/KullaniciyaGit"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/background_button"
        android:text="Admin Girişi"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"></Button>


</RelativeLayout>